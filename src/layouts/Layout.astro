---
// Layout base
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProductModal from '../components/islands/ProductModal.svelte';
import OrderPanel from '../components/islands/OrderPanel.svelte';
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.title || 'Artesan√≠as'}</title>
    <style>
      :root {
        --primary: #7c4d2a;
        --accent: #e0b07a;
        --bg: #f9f6f2;
        --text: #2d1b0e;
      }
      html, body {
        margin: 0;
        padding: 0;
        background: var(--bg);
        color: var(--text);
        font-family: 'Segoe UI', 'Arial', sans-serif;
        min-height: 100vh;
      }
      main {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 1rem;
      }
      a {
        color: var(--primary);
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }
      /* Global form/button styles */
      input, select, textarea {
        font-family: inherit;
        font-size: 1rem;
        padding: 0.6rem 0.75rem;
        border-radius: 0.6rem;
        border: 1px solid #e6dfd8;
        background: #fff;
        color: var(--text);
        box-shadow: none;
      }
      button { font-family: inherit; }
      .primary {
        background: var(--primary);
        color: #fff;
        border: none;
        padding: 0.6rem 1rem;
        border-radius: 0.6rem;
        cursor: pointer;
      }
      .secondary {
        background: transparent;
        color: var(--primary);
        border: 1px solid var(--primary);
        padding: 0.5rem 0.8rem;
        border-radius: 0.6rem;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  <!-- Isla global del modal de producto -->
    <ProductModal client:load />
    <OrderPanel client:load />
  </body>
</html>
